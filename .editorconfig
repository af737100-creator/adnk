# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# HTML files
[*.html]
indent_size = 4
indent_style = space

# CSS files
[*.css]
indent_size = 4
indent_style = space

# JavaScript files
[*.js]
indent_size = 4
indent_style = space
max_line_length = 100

# JSON files
[*.json]
indent_size = 2
indent_style = space

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2
indent_style = space

# YAML files
[*.{yml,yaml}]
indent_size = 2
indent_style = space

# Package.json
[package.json]
indent_size = 2
indent_style = space

# Git files
[.git*]
indent_size = 2
indent_style = space

# Makefile
[Makefile]
indent_style = tab

# Batch files
[*.{bat,cmd}]
end_of_line = crlf