{
  "name": "ta3lemi-platform",
  "version": 2,
  "builds": [
    {
      "src": "**/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/dashboard",
      "destination": "/pages/dashboard.html"
    },
    {
      "source": "/courses",
      "destination": "/pages/my-courses.html"
    },
    {
      "source": "/create",
      "destination": "/pages/create-course.html"
    },
    {
      "source": "/classroom",
      "destination": "/pages/classroom.html"
    },
    {
      "source": "/whiteboard",
      "destination": "/pages/whiteboard.html"
    },
    {
      "source": "/analytics",
      "destination": "/pages/analytics.html"
    },
    {
      "source": "/students",
      "destination": "/pages/students.html"
    },
    {
      "source": "/settings",
      "destination": "/pages/settings.html"
    },
    {
      "source": "/profile",
      "destination": "/pages/profile.html"
    },
    {
      "source": "/help",
      "destination": "/pages/help.html"
    },
    {
      "source": "/about",
      "destination": "/pages/about.html"
    },
    {
      "source": "/login",
      "destination": "/pages/dashboard.html?login=true"
    },
    {
      "source": "/signup",
      "destination": "/pages/dashboard.html?signup=true"
    },
    {
      "source": "/(.*)",
      "destination": "/$1"
    }
  ],
  "redirects": [
    {
      "source": "/home",
      "destination": "/",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdnjs.cloudflare.com https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com; img-src 'self' data: https:; font-src 'self' https://cdnjs.cloudflare.com; connect-src 'self' https://*.supabase.co https://www.googleapis.com; frame-src 'self' https://www.youtube.com;"
        }
      ]
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false,
  "env": {
    "SUPABASE_URL": "https://ollwqisezqkawrulahqq.supabase.co",
    "SUPABASE_ANON_KEY": "sb_publishable_HnNvDq3tgZa1GBODyM8FxA_Z2mMyqDF",
    "YOUTUBE_API_KEY": "AIzaSyCh9scasVWUK4AktfSUE5NlCcMyvCmGs2o"
  }
}